<p style="color: green"><%= notice %></p>

<h1>Infos</h1>
  <table>
   <thead>
<tr>
   <th><strong>Date</strong></th>
   <th> <strong>Ord</strong>  </th>
   <th> <strong>Val</strong></th>
 </tr>
</thead>
<div id="infos">
  <% @infos.each do |info| %>
    <%= render info %>
  <% end %>
</div>
</table>

<div>
<h3>totals for the current date to -5years</h3>

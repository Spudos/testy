<div class="container text-center">
  <div class="row">
    <div class="col">
        <h1>Today</h1>
    </div>
  </div>
</div>

<div id="boardshower">
  <div class="container text-center">
    <div class="row">
      <div class="col">
          <h3>Actual</h3>
      </div>
      <div class="col" id="bud">
          <h3>Budget</h3>
      </div>
      <div class="col" id="py">
          <h3>Last year</h3>
      </div>
    </div> 
  </div>    
</div>

<div id="boardshower">
  <div class="container text-center">
    <div class="row">
      <div class="col">
          <p>Total Orders: 
          <%= @result_today.ord_sum %> </p>
          <p>Sales Value: £  
          <%= @result_today.val_sum %></p>
      </div>
      <div class="col" id="bud">
          <p>Total Orders:
          <%= @result_today.bud_ord_sum %></p>
          <p>Sales Value: £
          <%= @result_today.bud_val_sum %></p>
          <p>
          <%if @result_today.val_sum-@result_today.bud_val_sum >= 0 %>
          <span id="pos">
          Sales Value Varience: £
          <%= @result_today.val_sum - @result_today.bud_val_sum %>
          </span>
          <% else %>
           <span id="neg">
           Sales Value Varience: £
          <%= @result_today.val_sum - @result_today.bud_val_sum %>
          </span>
          <% end %>
          </p>
      </div>
      <div class="col" id="py">
          <p>Total Orders:
          <%= @result_today.py_ord_sum %></p>
          <p>Sales Value: £
          <%= @result_today.py_val_sum %></p>
          
          <p>
          <%if @result_today.val_sum-@result_today.py_val_sum >= 0 %>
          <span id="pos">
          Sales Value Varience: £
          <%= @result_today.val_sum - @result_today.py_val_sum %>
          </span>
          <% else %>
           <span id="neg">
           Sales Value Varience: £
          <%= @result_today.val_sum - @result_today.py_val_sum %>
          </span>
          <% end %>
          </p>

      </div>

    </div> 
  </div>    
</div>

<hr class="hr" />

